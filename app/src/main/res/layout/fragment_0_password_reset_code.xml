<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginHorizontal="30dp"
    tools:context=".presentation.ui.rar.registerLoginReset.PasswordResetCodeFragment">

    <androidx.appcompat.widget.AppCompatImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/custom_cap_app"
        app:layout_constraintBottom_toTopOf="@+id/textView3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView3"
        style="@style/TextViewRegistration"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/text_recover_password"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="25dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@id/tv_note"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/ed_first"
                android:layout_width="30dp"
                android:layout_height="60dp"
                android:layout_marginEnd="20dp"
                android:background="@null"
                android:textAlignment="center"
                android:textSize="@dimen/size_biggest" />

            <View
                android:layout_width="30dp"
                android:layout_height="1dp"
                android:background="@color/black" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/ed_second"
                android:layout_width="30dp"
                android:layout_height="60dp"
                android:layout_marginEnd="20dp"
                android:background="@null"
                android:textAlignment="center"
                android:textSize="@dimen/size_biggest" />

            <View
                android:layout_width="30dp"
                android:layout_height="1dp"
                android:background="@color/black" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/ed_third"
                android:layout_width="30dp"
                android:layout_height="60dp"
                android:layout_marginEnd="20dp"
                android:background="@null"
                android:textAlignment="center"
                android:textSize="@dimen/size_biggest" />

            <View
                android:layout_width="30dp"
                android:layout_height="1dp"
                android:background="@color/black" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/ed_fourth"
                android:layout_width="30dp"
                android:layout_height="60dp"
                android:layout_marginEnd="20dp"
                android:background="@null"
                android:textAlignment="center"
                android:textSize="@dimen/size_biggest" />

            <View
                android:layout_width="30dp"
                android:layout_height="1dp"
                android:background="@color/black" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/ed_fifth"
                android:layout_width="30dp"
                android:layout_height="60dp"
                android:layout_marginEnd="20dp"
                android:background="@null"
                android:textAlignment="center"
                android:textSize="@dimen/size_biggest" />

            <View
                android:layout_width="30dp"
                android:layout_height="1dp"
                android:background="@color/black" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/ed_sixth"
                android:layout_width="30dp"
                android:layout_height="60dp"
                android:background="@null"
                android:textAlignment="center"
                android:textSize="@dimen/size_biggest" />

            <View
                android:layout_width="30dp"
                android:layout_height="1dp"
                android:background="@color/black" />

        </LinearLayout>

    </LinearLayout>


    <TextView
        android:id="@+id/tv_note"
        style="@style/TextViewNoteBlank"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="317dp"
        android:text="@string/text_reset_password_note_2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.button.MaterialButton
        style="@style/DefaultRegisterMaterialButton"
        android:layout_width="220dp"
        android:layout_height="56dp"
        android:layout_marginBottom="68dp"
        android:text="@string/reset_password"
        android:textSize="@dimen/size_small_12sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>